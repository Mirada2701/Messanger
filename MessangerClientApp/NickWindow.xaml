<Window x:Class="MessangerClientApp.NickWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessangerClientApp"
        mc:Ignorable="d"
        Title="NickWindow" Height="100" Width="200" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label>Enter nickname : </Label>
        <TextBox x:Name="nickTb" Grid.Column="1" Margin="5"></TextBox>
        <Button Grid.Row="1" Grid.ColumnSpan="2" Margin="40,5" Click="Button_Click">Continue</Button>
    </Grid>
</Window>
